@model IEnumerable<DataAccessLayer.Entity.Details>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<!DOCTYPE html>
<html lang="en">
<head>
   
   

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <!-- Include DataTables JS -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
</head>
<body>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="example" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorDetailsID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Degree)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateofBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HospitalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorDetailsID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Degree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateofBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HospitalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { name = item.Name }) |
                        @Html.ActionLink("Details", "Details", new { name = item.Name }) |
                        @Html.ActionLink("Delete", "Delete", new { name = item.Name })
                    </td>
                </tr>

            }
        </tbody>
    </table>

    <h1>ImportExcel</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-controller="FileUpload" asp-action="ImportFromExcel"
                  enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="file" name="file" class="form-control" />
                <button type="submit" name="Upload" class="btn btn-primary">Upload </button>

            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
        $('#example').DataTable({
            pageLength: 3,
            paging: true
        });

    </script>



    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Bfrtip',  // Display buttons at the top
                buttons: ['copy', 'csv', 'excel', 'pdf'] // Add the export buttons
            });
        });
    </script>

</body>
</html>
